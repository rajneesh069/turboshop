generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique @default(uuid()) @db.Uuid
  name      String
  email     String   @unique
  phone     String   @unique
  addresses String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model CountryCode {
  id   String @id @unique @default(uuid()) @db.Uuid
  code String @unique
}
